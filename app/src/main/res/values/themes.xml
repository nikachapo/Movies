<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/amarante</item>
    </style>

    <style name="ImdbBtnStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:drawableTop">@mipmap/ic_imdb</item>
        <item name="android:textSize">@dimen/imdb_rate_text_size</item>
        <item name="android:layout_marginTop">@dimen/imdb_rate_margin_to_edge</item>
        <item name="android:layout_marginEnd">@dimen/imdb_rate_margin_to_edge</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/def_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthUiTheme" parent="Theme.Movies">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>